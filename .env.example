# ============================================================
# LLM Dev Bench — Environment Variables
# ============================================================
# Copy this file to .env and fill in your API keys.
# NEVER commit .env to version control.

# ----------------------------------------------------------
# API Keys — required for Mode A (API Direct)
# ----------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...

# ----------------------------------------------------------
# Judge model — used for rubric evaluation (Anthropic API)
# ----------------------------------------------------------
JUDGE_MODEL_ID=claude-haiku-4-5-20251001

# ----------------------------------------------------------
# Timeouts (milliseconds)
# ----------------------------------------------------------
REQUEST_TIMEOUT_MS=60000       # API requests
CLI_AGENT_TIMEOUT_MS=120000    # CLI agents (process startup overhead)

# ----------------------------------------------------------
# Output
# ----------------------------------------------------------
MAX_OUTPUT_TOKENS=4096
RESULTS_DIR=./results
